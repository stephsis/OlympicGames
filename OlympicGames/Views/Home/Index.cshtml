@model CountriesViewModel

@{
    ViewData["Title"] = "Olympic Games";
}

<div class="row">
    <div class="col-md-3">
        <h3 class="mt-3">Category</h3>
        <div class="list-group">
            <a asp-action="Index"
               asp-route-activeCat="all"
               asp-route-activeGame="@Model.ActiveCat"
               class="list-group-item @Model.CheckActiveCat("all")">
                All
            </a>

            @foreach (Category cat in Model.Categories)
            {
                <a asp-action="Index"
                   asp-route-activeCat="@cat.CategoryId"
                   asp-route-activeGame="@Model.ActiveGame"
                   class="list-group-item @Model.CheckActiveCat(cat.CategoryId)">
                    @cat.CategoryName
                </a>
            }
        </div>


        <h3 class="mt-3">Game</h3>
        <div class="list-group">
            <a asp-action="Index"
               asp-route-activeCat="@Model.ActiveCat"
               asp-route-activeGame="all"
               class="list-group-item @Model.CheckActiveGame("all")">
                All
            </a>


            @foreach (Game game in Model.Games)
            {
                <a asp-action="Index"
                   asp-route-activeCat="@Model.ActiveCat"
                   asp-route-activeGame="@game.GameID"
                   class="list-group-item @Model.CheckActiveGame(game.GameID)">
                    @game.GameName
                </a>
            }
        </div>
    </div>
    <div class="col-md-9">
        <ul class="list-inline">
            @foreach (Countries country in Model.Country)
            {
                <li class="list-inline-item">
                    <a asp-action="Details" asp-route-id="@country.CountryID">
                        <img src="~/images/@country.FlagImage" alt="@country.CountryName"
                             title="@country.CountryName | @country.Category.CategoryName @country.Game.GameName" />
                    </a>
                </li>
            }
        </ul>
    </div>
</div>
